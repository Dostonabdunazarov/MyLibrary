@model MyLibrary.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h3>Подробно</h3>

<div>
    <h4>Жанр</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-10"><b>Книги:</b> <br />
            @foreach (var a in Model.Books)
            {
                <li>@a.Title</li>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
