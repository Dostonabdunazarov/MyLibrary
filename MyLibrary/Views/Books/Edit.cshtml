@model MyLibrary.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h3>Редактирование книг</h3>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePublish" class="control-label"></label>
                <input asp-for="DatePublish" class="form-control" />
                <span asp-validation-for="DatePublish" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (Genre i in ViewBag.Genres)
                {
                    <input type="radio" name="selectedGenre" value="@i.Id"
                       @(Model.Genre.Name == i.Name ? "checked=\"checked\"" : "") /> @i.Name
                    <br>
                }
            </div>
            <div class="form-group">
                @foreach(Author i in ViewBag.Authors){
                    <input type="checkbox" name="selectedAuthors" value="@i.Id"
                       @(Model.Authors.Contains(i) ? "checked=\"checked\"" : "") /> @i.FullName <br>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

