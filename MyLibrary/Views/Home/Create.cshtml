@model MyLibrary.Models.Book
@{
    ViewBag.Title = "Добавление книгу";
}

<div class="text-center">
    <form asp-action="Create" asp-controller="Home">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DatePublish" class="control-label">Год издания</label>
            <input type="date" asp-for="DatePublish" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="control-label">Жанр</label>
        </div>
        @foreach (var item in ViewBag.Genres)
        {
            <div class="form-group; d-flex">
                <input type="text" name="selectedGenre" value="@item.Id" class="form-control; d-flex; mr-1" 
                />@item.Name <br>
            </div>
        }
        <div class="form-group">
            <label asp-for="Authors" class="control-label">Авторы</label>
        </div>
        @foreach (var item in ViewBag.Authors)
        {
            <div class="form-group; d-flex">
                <input type="checkbox" name="selectedAuthors" value="@item.Id" class="form-control; d-flex; mr-1"
                   />@item.FullName <br>
            </div>
        }

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
</div>