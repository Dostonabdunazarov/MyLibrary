@model MyLibrary.Models.Book
@{
    ViewBag.Title = "Удаление автомобиля";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название книги</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>Год издания</dt>
        <dd>
            @Html.DisplayFor(model => model.DatePublish)
        </dd>

        <dt>Жанр</dt>
        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>
        @foreach(var item in Model.Authors) {
            <dd>
                @item.FullName;
            </dd>
        }
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>